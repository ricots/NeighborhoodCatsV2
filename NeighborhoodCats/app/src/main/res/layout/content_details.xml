            <!--<TextView-->
                <!--android:id="@+id/textView_details_newname"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
                <!--android:text="@string/cat_name_details"-->
                <!--android:textColor="#000000"-->
                <!--android:layout_marginTop="37dp" />-->
        <!-- -->
            <!--<EditText-->
                <!--android:id="@+id/editText_details_newname"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:singleLine="true" />-->

            <TextView
                android:id="@+id/textView_details_newdesc"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/cat_notes_details"/>

            <TextView
                android:id="@+id/editText_details_newdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</RelativeLayout>
